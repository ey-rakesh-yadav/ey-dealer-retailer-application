<process xmlns="http://www.hybris.de/xsd/processdefinition"
	start="sendBrandingReqToSLCTAction" name="sclBranding-Process"
	processClass="com.scl.core.model.SclBrandingProcessModel">

	<action id="sendBrandingReqToSLCTAction" bean="sendBrandingReqToSLCTAction">
		<transition name="OK" to="waitForBrandingApproval" />
		<transition name="NOK" to="error" />
	</action>

	<action id="sendBrandingReqFeedbackToSLCTAction" bean="sendBrandingReqFeedbackToSLCTAction">
		<transition name="OK" to="success" />
		<transition name="NOK" to="error" />
	</action>

	<action id="checkToSendBrandingReqToSLCTAction" bean="checkToSendBrandingReqToSLCTAction">
		<transition name="OK" to="waitForBrandingApproval" />
		<transition name="CANCEL" to="sendBrandingReqCancelToSLCTAction" />
		<transition name="MODIFY" to="sendBrandingReqToSLCTAction" />
		<transition name="FEEDBACK" to="sendBrandingReqFeedbackToSLCTAction" />
		<transition name="NOK" to="error" />
	</action>

	<action id="sendBrandingReqCancelToSLCTAction" bean="sendBrandingReqCancelToSLCTAction">
		<transition name="OK" to="success" />
		<transition name="NOK" to="error" />
	</action>

	<wait id="waitForBrandingApproval" then="checkToSendBrandingReqToSLCTAction" prependProcessCode="false">
		<event>${process.code}_WAIT_FOR_BRANDING_APPROVAL</event>
	</wait>

	<end id="error" state="ERROR">All went wrong.</end>
	<end id="failed" state="FAILED">branding process failed.</end>
	<end id="success" state="SUCCEEDED">branding process succeed.</end>
</process>
